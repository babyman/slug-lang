import slug.test.*;

//
// assert something is true
// -----------------------
assert(true);
assert(true, "with a message");

assert(1 == 1);
assert(1 == 1, "with a message");

true.assertTrue();

false.assertFalse();


//
// assert 2 values are equal
// -----------------------
assertEqual(1, 1);
assertEqual(1, 1, "with a message");


try {
	assert(false);
	throw AnError();
} catch err {
	{type:"AssertionError", ...} => nil;
}


try {
	assertEqual(1, "str");
	throw AnError();
} catch err {
	{type:"AssertionError", ...} => nil;
}
