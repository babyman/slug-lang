var {*} = import(
    "slug.test"
)

var arr = ["h", "e", "l", "l", "o"]

// simple indexing
// ---------------

arr[3] /> assertEqual("l")

// slicing
// -------

arr[0:] /> assertEqual(["h", "e", "l", "l", "o"])

arr[1:] /> assertEqual(["e", "l", "l", "o"])

arr[0:2] /> assertEqual(["h", "e"])

arr[0:-1] /> assertEqual(["h", "e", "l", "l"])

arr[0:4] /> assertEqual(["h", "e", "l", "l"])

arr[0:10] /> assertEqual(["h", "e", "l", "l", "o"])

arr[10:] /> assertEqual([])

(arr[0:2] + arr[4:]) /> assertEqual(["h", "e", "o"])

arr[1 + 1:] /> assertEqual(["l", "l", "o"])

// slicing with step value
// -----------------------

arr[0::] /> assertEqual(["h", "e", "l", "l", "o"])

arr[1::] /> assertEqual(["e", "l", "l", "o"])

arr[0:2:] /> assertEqual(["h", "e"])

arr[0::2] /> assertEqual(["h", "l", "o"])

arr[0::3] /> assertEqual(["h", "l"])

arr[0:4:] /> assertEqual(["h", "e", "l", "l"])

arr[1::2] /> assertEqual(["e", "l"])

arr[0:6:2] /> assertEqual(["h", "l", "o"])

arr[1:6:2] /> assertEqual(["e", "l"])
