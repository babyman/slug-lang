var {*} = import(
    "slug.test"
)

var str = "hello"

// simple indexing
// ---------------

str[3] /> assertEqual("l")

// negative indexing
str[-1] /> assertEqual("o")


// repeating strings
// -----------------

("a" * 5) /> assertEqual("aaaaa")


// slicing
// -------

str[0:] /> assertEqual("hello")

str[1:] /> assertEqual("ello")

str[0:2] /> assertEqual("he")

str[0:4] /> assertEqual("hell")

str[1::] /> assertEqual("ello")

str[0:2:] /> assertEqual("he")


// slicing with step value
// -----------------------

str[0:4:] /> assertEqual("hell")

str[1:6:2] /> assertEqual("el")

str[0:6:2] /> assertEqual("hlo")

str[1::2] /> assertEqual("el")

str[0::2] /> assertEqual("hlo")

str[0::] /> assertEqual("hello")
