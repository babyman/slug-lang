var {*} = import(
    "slug.test",
)

(1 / 3) /> assertEqual(0.33333333333333)

// fractions round half up
(1 / 6) /> assertEqual(0.16666666666667)

(201_555_334 / 2) /> assertEqual(100_777_667)

(1_000_000 / 6) /> assertEqual(166666.66666666667)

// slug uses decimal floating point math to avoid the pitfalls of floating point arithmetic
// in JavaScript this would evaluate to 0.30000000000000004
// --------------------------------------
(0.1 + 0.2) /> assertEqual(0.3)


// bitwise operations
// --------------------------

0x04 /> assertEqual(0x04)
0x04 /> assertEqual(4)
4 /> assertEqual(0x04)

(0xf8 & 0xff) /> assertEqual(0xf8)
(0xf8 | 0x00) /> assertEqual(0xf8)
(0xf0 ^ 0x60) /> assertEqual(0x90)

// shifting
(0x0f << 5) /> assertEqual(0x01e0)
(0x01e0 >> 5) /> assertEqual(0x0f)

// support for _ as a number separator
1_000 /> assertEqual(1000)
10_000_000 /> assertEqual(10000000)
3.141_592 /> assertEqual(3.141592)
0xFF_EC_DE_5E /> assertEqual(4293713502)
