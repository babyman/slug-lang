var {*} = import(
	"slug.std",
	"slug.io.tcp"
)

var msg = match argv() {
	[] => "Echo this from Slug!"
	[h, ...] => h
}

var client = connect("127.0.0.1", 8080)
defer {
	println("defered client close")
	close(client)
}

println("connected, writing", msg)

client /> write(msg)


println("Got echo:", read(client, 1024))

