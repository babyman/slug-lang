var {*} = import (
    "slug.std"
);

var sayHi = fn(args) {
    if (args != nil && args /> len() > 0) {
        "Hello " + args[0] + "!";
    } else {
        "Hello Slug!"
    }
}

//
// if args is defined we have commandline params
//
if(isDefined("args")) {
    args /> sayHi /> println;
} else {
    sayHi(nil) /> println;
}
