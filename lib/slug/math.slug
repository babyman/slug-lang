var {*} = import(
	"slug.std"
);

var _searchList = fn(vals, sel, f, idx = 0) {
	if(len(vals) > idx) {
		_searchList(vals, f(vals[idx], sel), f, idx + 1)
	} else {
		sel
	}
}


var max = fn(a, ...b) {
	val _privatemax = fn(x, y) {if (x > y) {x} else {y}
};

	_searchList(b, a, _privatemax);
}

var min = fn(a, ...b) {
	val _privatemin = fn(x, y) {if (x < y) {x} else {y}
};
	_searchList(b, a, _privatemin);
}
