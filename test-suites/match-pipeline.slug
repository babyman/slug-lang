var {*} = import(
    "slug.string",
    "slug.std",
    "slug.test",
)

@test
var testSimpleMatch = fn() {
    1 /> match {
            1 => "one"
            2 => "two"
            v => throw v
        }
    /> assertEqual("one")
}

@test
var testListMatch = fn() {
    [1, 2, 3] /> match {
            [h, ...] => h
        }
    /> assertEqual(1)
}

@test
var testMapMatch = fn() {
    {a: 1, b: 2} /> match {
            {a} => a
        }
    /> assertEqual(1)
}
